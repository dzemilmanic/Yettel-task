{
  "name": "task-management-api",
  "version": "1.0.0",
  "description": "REST API for task management with role-based access control",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --watch --runInBand",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --runInBand",
    "migrate:up": "node src/migrations/migrate.js up",
    "migrate:down": "node src/migrations/migrate.js down",
    "migrate:status": "node src/migrations/migrate.js status",
    "migrate:create": "node src/migrations/migrate.js create",
    "migrate:test": "cross-env NODE_ENV=test node src/migrations/migrate.js up"
  },
  "keywords": [
    "rest",
    "api",
    "express",
    "tasks",
    "sql"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
